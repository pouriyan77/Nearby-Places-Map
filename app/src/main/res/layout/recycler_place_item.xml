<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layoutDirection="rtl">

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/placeImage"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/placeImage"
        android:layout_width="@dimen/placeImageSize"
        android:layout_height="@dimen/placeImageSize"
        android:layout_marginStart="5dp"
        android:layout_marginVertical="4dp"
        tools:src="@drawable/restaurant_sample"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/placeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/placeImage"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/placeImage"
        android:fontFamily="@font/iran_sans_bold_6"
        android:textSize="13dp"
        tools:text="تومو فرشته"
        android:maxLines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/placeTitleTextView"
        android:layout_alignRight="@id/placeTitleTextView"
        android:fontFamily="@font/iran_sans_1"
        android:text="خیابان فرشته، سام سنتر، طبقه اول"
        android:textSize="11dp"
        android:maxLines="1"/>


</RelativeLayout>